// è¤‡é›‘ãªAIåˆ†æå€¤ã‚’ç”Ÿæˆã™ã‚‹é–¢æ•°
function generateAdvancedMetrics(horse, allHorses) {
  const pt = horse.pt;
  const maxPt = Math.max(...allHorses.map(h => h.pt));
  const minPt = Math.min(...allHorses.map(h => h.pt));
  const ptRange = maxPt - minPt;
  const normalizedPt = (pt - minPt) / ptRange;

  // ã‚·ãƒ¼ãƒ‰å€¤ç”Ÿæˆï¼ˆé¦¬ç•ª + ptï¼‰
  const seed = horse.horseNumber * 1000 + pt;
  const seededRandom = (index) => {
    const x = Math.sin(seed + index) * 10000;
    return x - Math.floor(x);
  };

  // Win Probabilityï¼ˆå‹ç‡äºˆæ¸¬ï¼‰: 0-100%
  const baseWinProb = normalizedPt * 35 + 5; // 5-40%ã®ç¯„å›²
  const winProbability = Math.min(95, Math.max(2, baseWinProb + (seededRandom(1) - 0.5) * 8));

  // Place Probabilityï¼ˆé€£å¯¾ç‡äºˆæ¸¬ï¼‰
  const placeProb = Math.min(98, winProbability * 2.2 + (seededRandom(2) - 0.5) * 5);

  // Feature Scoresï¼ˆç‰¹å¾´é‡ã‚¹ã‚³ã‚¢ï¼‰: 0-100
  const speedIndex = Math.min(100, Math.max(40, pt * 0.95 + seededRandom(3) * 15));
  const staminaRating = Math.min(100, Math.max(35, pt * 0.88 + seededRandom(4) * 20));
  const formTrend = Math.min(50, Math.max(-50, (normalizedPt - 0.5) * 80 + (seededRandom(5) - 0.5) * 30));
  const trackCompatibility = Math.min(100, Math.max(30, pt * 0.92 + seededRandom(6) * 18));
  const distanceFitness = Math.min(100, Math.max(35, pt * 0.90 + seededRandom(7) * 22));
  const jockeyFactor = Math.min(100, Math.max(40, 75 + (seededRandom(8) - 0.5) * 40));

  // Model Certaintyï¼ˆãƒ¢ãƒ‡ãƒ«ç¢ºä¿¡åº¦ï¼‰: 0-1
  const modelCertainty = Math.min(0.98, Math.max(0.65, normalizedPt * 0.3 + 0.65 + (seededRandom(9) - 0.5) * 0.1));

  // Expected Valueï¼ˆæœŸå¾…å€¤ï¼‰: ã‚ªãƒƒã‚ºæƒ³å®š Ã— å‹ç‡
  const estimatedOdds = Math.max(1.2, 100 / winProbability);
