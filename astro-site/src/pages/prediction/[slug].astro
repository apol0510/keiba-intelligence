  <script is:inline>
    function selectRace(event, button) {
      event.preventDefault();

      const raceIndex = button.getAttribute('data-race-index');

      // „Åô„Åπ„Å¶„ÅÆ„Éú„Çø„É≥„Åã„Çâactive„ÇíÂâäÈô§
      document.querySelectorAll('.race-btn').forEach(btn => {
        btn.classList.remove('active');
      });

      // „ÇØ„É™„ÉÉ„ÇØ„Åï„Çå„Åü„Éú„Çø„É≥„Çí„Ç¢„ÇØ„ÉÜ„Ç£„Éñ„Å´
      button.classList.add('active');

      // „Åô„Åπ„Å¶„ÅÆ„É¨„Éº„Çπ„Ç≥„É≥„ÉÜ„É≥„ÉÑ„ÇíÈùûË°®Á§∫
      document.querySelectorAll('.race-content').forEach(content => {
        content.classList.remove('active');
      });

      // ÈÅ∏Êäû„Åï„Çå„Åü„É¨„Éº„Çπ„ÇíË°®Á§∫
      const selectedRace = document.querySelector(`.race-content[data-race-index="${raceIndex}"]`);
      if (selectedRace) {
        selectedRace.classList.add('active');

        // „Ç´„Ç¶„É≥„Çø„Éº„Ç¢„Éã„É°„Éº„Ç∑„Éß„É≥ÂÜçÂÆüË°å
        selectedRace.querySelectorAll('[data-counter]').forEach(el => {
          const target = parseInt(el.getAttribute('data-counter'));
          animateCounter(el, target);
        });
      }
    }

    // „Ç´„Ç¶„É≥„Çø„Éº„Ç¢„Éã„É°„Éº„Ç∑„Éß„É≥
    function animateCounter(element, target) {
      const duration = 1000;
      const start = 0;
      const startTime = Date.now();

      function update() {
        const now = Date.now();
        const progress = Math.min((now - startTime) / duration, 1);
        const current = Math.floor(progress * target);
        element.textContent = current.toLocaleString();

        if (progress < 1) {
          requestAnimationFrame(update);
        }
      }

      update();
    }

    // „Éö„Éº„Ç∏Ë™≠„ÅøËæº„ÅøÊôÇ„Å´„Ç´„Ç¶„É≥„Çø„Éº„Ç¢„Éã„É°„Éº„Ç∑„Éß„É≥ÂÆüË°å
    document.addEventListener('DOMContentLoaded', () => {
      const activeRace = document.querySelector('.race-content.active');
      if (activeRace) {
        activeRace.querySelectorAll('[data-counter]').forEach(el => {
          const target = parseInt(el.getAttribute('data-counter'));
          animateCounter(el, target);
        });
      }
    });
  </script>
